<% layout('layouts/boilerplate')%>
    <link rel="stylesheet" href="/stylesheets/product.css">


    <h1>Are you looking...?</h1>
    <div>
        <h3 class="text-center">
            <small class="text-body-secondary">Or</small>
        </h3>
        <a href="/dogGrooming/new" class="create-product-link">Create a new product</a>
    </div>
    <div class="products-container">
    <% for(let product of foundproduct){ %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <%if(product.image.length){%>
                        <img class="img-fluid" src="<%=product.image[0].url%>">
                        <%}else {%>
                            <img class="img-fluid"
                                src="https://res-console.cloudinary.com/dktixmv1b/thumbnails/v1/image/upload/v1688626445/U2Vjb25kSGFuZCBwcm9kdWN0cy9nZ2JqN2d6NmR4bDNwY2NpdHFwaA==/preview">
                            <%}%>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=product.name%>
                        </h5>
                        <p class="card-category">
                            Price: <%=product.price%>
                        </p>
                        <p class="card-category">
                            Description: <%=product.description%>
                        </p>
                        <p class="card-category">
                            Location: <%=product.location%>
                        </p>
                        <a class="btn btn-primary" href="/dogGrooming/<%=product._id%>">View details about
                            <%=product.name%></a>
                    </div>
                </div>
            </div>
        </div>
    </div>

        <%}%>