<% layout('layouts/boilerplate')%>
<div class="product-form-container">
    <h1 class="text-center">New product adding</h1>
    <div class="form-wrapper">
        <form action="/dogGrooming" method="POST" novalidate class="validation-check" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name" class="form-label">Product name</label> 
                <input type="text" class="form-control" name="product[name]" id="name" placeholder="Product name" required>
                <div class="feedback invalid-feedback">Please fill a product name.</div>
            </div>

            <div class="form-group">
                <label for="price" class="form-label">Price</label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input type="number" class="form-control" name="product[price]" placeholder="0.00" step="0.01" required>
                    <div class="feedback invalid-feedback">Please fill a valid price.</div>
                </div>
            </div>

            <div class="form-group">
                <label for="BriefDes" class="form-label">Brief Description</label>
                <textarea class="form-control" id="briefDes" name="product[briefDes]" maxlength="100" required></textarea>
                <div class="feedback invalid-feedback">Please fill a brief description.</div>
            </div>

            <div class="form-group">
                <label for="description" class="form-label">Product description</label>
                <textarea class="form-control" id="description" name="product[description]" maxlength="300" required></textarea>
                <div class="feedback invalid-feedback">Please fill a description.</div>
            </div>

            <div class="form-group">
                <label for="location" class="form-label">Pick-up point / shipping from</label>
                <textarea class="form-control" id="location" name="product[location]" maxlength="100" required></textarea>
                <div class="feedback invalid-feedback">Please fill a location.</div>
            </div>

            <div class="form-group">
                <label for="category" class="form-label">Category type</label>
                <select class="form-select" name="product[category]" id="category">
                    <% for(let category of categories){ %>
                        <option value="<%=category%>"><%=category%></option>
                    <% } %>
                </select>
            </div>

            <div class="form-group">
            <label for="contact" class="form-label">Contact Number:</label>
            <div class="input-group">
                <span class="input-group-text">+61</span>
                <input
                type="tel"
                class="form-control"
                name="product[contact]"
                id="contact"
                placeholder="e.g. 412 345 678"
                pattern="[0-9]{9}"
                required
                >
            </div>
            <div class="feedback invalid-feedback">Please enter a valid contact number (9 digits).</div>
            </div>


            <div class="form-group">
                <label for="image" class="form-label">Upload Image(s)</label>
                <input class="form-control" type="file" id="image" name="image" multiple required>
                <div class="feedback invalid-feedback">Please upload an image.</div>
            </div>

            <div class="form-actions">
                <button class="btn btn-primary">Submit</button>
                <a href="/dogGrooming" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>


