<% layout('layouts/boilerplate')%>
<div class="product-show-container">
    <div class="product-gallery">
        <div id="carouselProduct" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <% foundproduct.image.forEach((img, i)=> { %>
                    <div class="carousel-item <%= i===0 ? 'active' : '' %>">
                        <img src="<%=img.url%>" class="d-block w-100" alt="Product image <%=i+1%>">
                    </div>
                <% }) %>
            </div>
            <% if (foundproduct.image.length> 1) { %>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselProduct" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselProduct" data-bs-slide="next">
                    <span class="carousel-control-next-icon"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            <% } %>
        </div>
    </div>

    <div class="product-details">
        <h1 class="product-title"><%=foundproduct.name%></h1>
        <div class="product-meta">
            <div>
                <p class="product-price">CATEGORY:</p>
                <p class="product-category"> <%= foundproduct.category%></p>
            </div>
            <div>
                <p class="product-price">PRICE:</p>
                <p> $<%= foundproduct.price%></p>
            </div>
            <div>
                <p class="product-price">ABOUT:</p>
                <p class="product-description"><%= foundproduct.briefDes%></p>
            </div>
            <div>
                <p class="product-price">DESCRIPTION:</p>
                <p class="product-description"><%= foundproduct.description%></p>
            </div>
            <div>
                <p class="product-price">LOCATION:</p>
                <p class="product-location"> <%= foundproduct.location%></p>
            </div>
            <p class="product-author">Created by: 
                <% if(foundproduct.author!==undefined && foundproduct.author.length>0){ %>
                    <%=foundproduct.author[0].username%>
                <% } else { %>
                    Author not found
                <% } %>
            </p>
        </div>

        <div class="product-actions">
            <a class="btn btn-primary" href="/dogGrooming">Back to products</a>
            <% if(signedClient && foundproduct.author[0].equals(signedClient._id)){ %>
                <a class="btn btn-secondary" href="/dogGrooming/<%=foundproduct._id%>/edit">Edit</a>
                <form class="w-100" action="/dogGrooming/<%=foundproduct._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </form>
            <% } %>
        </div>
    </div>

    <div class="product-reviews">
        <% if(signedClient){ %>
            <h2>Leave a review</h2>
            <form action="/dogGrooming/<%=foundproduct._id%>/reviews" method="POST" class="review-form validation-check" novalidate>
                <div class="form-group">
                    <fieldset class="starability-heart">
                        <legend>Rating:</legend>
                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>
                </div>
                <div class="form-group">
                    <label class="form-label" for="body">Review</label>
                    <textarea class="form-control" name="review[body]" id="body" required></textarea>
                    <div class="feedback invalid-feedback">Please fill a comment here.</div>
                </div>
                <button class="btn btn-success">Submit</button>
            </form>
        <% } %>

        <div class="reviews-list">
            <% if (foundproduct.review.length > 0) { %>
                <% for (let r of foundproduct.review) { %>
                    <div class="review-card">
                        <div class="review-header">
                            <p class="review-author">COMMENTED BY: <%=r.author.username%></p>
                            <p class="starability-result" data-rating="<%=r.rating%>">
                                RATED: <%=r.rating%> stars
                            </p>
                        </div>
                        <p class="review-body">SAID: <%=r.body%></p>
                        <% if(signedClient && r.author.equals(signedClient._id)){ %>
                            <form action="/dogGrooming/<%=foundproduct._id%>/reviews/<%=r._id%>?_method=DELETE" method="POST">
                                <button class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        <% } %>
                    </div>
                <% } %>
            <% } else { %>
                <p class="no-reviews"><%= foundproduct.name %> has no reviews yet.</p>
            <% } %>
        </div>
    </div>
</div>